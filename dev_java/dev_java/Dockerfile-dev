# Build Stage
FROM maven:3.8.7-eclipse-temurin-17 as builder

WORKDIR /build

# Copy the parent POM and module directories
COPY pom.xml ./
COPY producer ./producer  
COPY writer ./writer
COPY common ./common
COPY dev ./dev

# Build the dev module (and its dependencies)
RUN mvn clean package -pl dev -am -DskipTests

# Optional: List contents of target directory for debugging
RUN ls -l /build/dev/target

# Runtime Stage
FROM eclipse-temurin:17-jre

WORKDIR /app

# Copy the built JAR from the builder stage
COPY --from=builder /build/dev/target/dev*.jar ./dev.jar

# Run the application
CMD ["java", "-jar", "dev.jar"]